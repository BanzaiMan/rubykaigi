#content
  %h1!= rubyist_name @rubyist

  - if @rubyist == user
    %p [That's you!]

  %h2 Website
  %p
    - if (website = @rubyist.website).present?
      != link_to website, website, :rel => 'nofollow me'
    - else
      N/A

  %h2 RubyKaigi 2010
  %ul
    - if @rubyist.individual_sponsor?(2010)
      %li [Individual Sponsor]
    - if @rubyist.staff?(2010)
      %li [Staff]

  %h2 RubyKaigi 2009
  %ul
    %li Attende
    %li Party Attendee
    %li Staff
    %li Speaker

  %h2 RubyKaigi 2008
  %ul
    %li Staff

  %h2 RubyKaigi 2007
  %ul
    %li Staff

  %h2 RubyKaigi 2006
  %ul
    %li Staff
