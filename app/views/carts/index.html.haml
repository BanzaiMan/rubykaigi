#content
  %h1 #{user.username}'s cart

  - if @cart.empty?
    (your cart is empty!)
  - else
    %ul
    - form_for @cart do |f|
      - @cart.items.each do |item|
        - if item.individual_sponsor?
          %li
            #{t(item.label)}
            != link_to('delete this', remove_item_carts_path(:product_item_code => item.item_code), :method => :delete)
            <br />
            Amount:<br />
            #{number_with_delimiter(item.unit_price)}
            JPY + #{t('additional_amount_label')}<br />
      != f.submit 'Update Cart'
    <br/>
    <br/>
    != link_to('Proceed to checkout', orders_path, :method => :post)
  %hr
