#content
  %h1
    #{t(:platinum_sponsor)}
  %article
    - RubyKaigi2011::PlatinumSponsor.all.each do |sponsor|
      %h2
        = sponsor.localize(I18n.locale, :name)
      %img#logo{:alt => "Example Company, Ltd.", :src => "/2011/sponsors/sponsorsPlatinum.png"}
      %div
        %p
          = sponsor.localize(I18n.locale, :pr)
        %p.right
          %a.linkMark{:href => "#{sponsor.url}", :target => "_blank"}
            = sponsor.url
  != render :partial => 'shared/2011/back_to_top'

