- @title = 'Sign in / Sign up'

- content_for :head do
  %style(type='text/css')
    :sass
      input[name=openid_identifier]
        :padding-left 20px
        :background
          :image url('/images/openid_logo.gif')
          :repeat no-repeat
          :position 2px center

#content
  %h1= @title

  %ul
    %li!= link_to 'Sign in with Twitter', sessions_path(:warden_oauth_provider => 'twitter')
    %li!= link_to 'Sign in with Google Account', sessions_path(:openid_identifier => 'https://www.google.com/accounts/o8/id')
    %li!= link_to 'Sign in with Yahoo! ID', sessions_path(:openid_identifier => 'http://yahoo.com')
    %li!= link_to 'Sign in with Yahoo! Japan ID', sessions_path(:openid_identifier => 'http://yahoo.co.jp')
    %li
      - form_tag sessions_path, :method => :get do
        != text_field_tag :openid_identifier
        != submit_tag 'Sign in'
