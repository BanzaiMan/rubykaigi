- @title = 'Sign in / Sign up'

- content_for :head do
  %style(type='text/css')
    :sass
      input[name=openid_identifier]
        :padding-left 20px
        :background
          :image url('/images/openid_logo.gif')
          :repeat no-repeat
          :position 2px center

%p!= link_to image_tag('sign_in_with_twitter.png', :alt => 'Sign in with Twitter'), sessions_path(:warden_oauth_provider => 'twitter')

%p or

- form_tag sessions_path, :method => :get do
  %p
    != text_field_tag :openid_identifier
    != submit_tag 'Sign in'
